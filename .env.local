# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Redis Configuration (for rate limiting and session storage)
REDIS_URL=your-redis-url

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Payment Gateway Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
TRIPAY_API_KEY=your-tripay-api-key
TRIPAY_PRIVATE_KEY=your-tripay-private-key

# Security
JWT_SECRET=your-jwt-secret
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Rate Limiting
RATE_LIMIT_WINDOW=86400
RATE_LIMIT_MAX_FREE=20
RATE_LIMIT_MAX_PREMIUM_BASIC=100
RATE_LIMIT_MAX_PREMIUM_PLUS=300

# Token Usage Limits (per day)
MAX_TOKENS_FREE=2000
MAX_TOKENS_PREMIUM_BASIC=10000
MAX_TOKENS_PREMIUM_PLUS=50000
